{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Base",
  "exclude": ["node_modules", ".turbo", "**/dist/**"],
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noUnusedLocals": true
  }
}
